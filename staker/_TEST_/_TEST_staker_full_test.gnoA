func TestApiGetRewards(t *testing.T) {
	agrs := ApiGetRewards()
	root, err := json.Unmarshal([]byte(agrs))
	if err != nil {
		panic(err)
	}

	response, err := root.GetKey("response")
	if err != nil {
		panic(err)
	}

	shouldEQ(t, response.Size(), 3) // lpTokenId 1, 2, 3
}

