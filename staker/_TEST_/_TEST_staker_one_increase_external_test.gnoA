func TestApiGetStakes(t *testing.T) {
	gss := ApiGetStakes()

	root, err := json.Unmarshal([]byte(gss))
	if err != nil {
		panic(err)
	}

	response, err := root.GetKey("response")
	if err != nil {
		panic(err)
	}

	shouldEQ(t, response.Size(), 2)
}

