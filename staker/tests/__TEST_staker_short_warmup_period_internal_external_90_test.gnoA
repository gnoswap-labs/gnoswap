func TestCollectReward(t *testing.T) {
	std.TestSetRealm(adminRealm)

	oldBar := bar.BalanceOf(a2u(admin))
	oldGns := gns.BalanceOf(a2u(admin))

	CollectReward(1, false)

	newBar := bar.BalanceOf(a2u(admin))
	newGns := gns.BalanceOf(a2u(admin))

	shouldEQ(t, newBar-oldBar, uint64(485))
	shouldEQ(t, newGns-oldGns, uint64(7861515679)) // external 485 + internal 7861515194
}

func TestCollectRewardSameBlockNoReward(t *testing.T) {
	std.TestSetRealm(adminRealm)

	oldBar := bar.BalanceOf(a2u(admin))
	oldGns := gns.BalanceOf(a2u(admin))

	CollectReward(1, false)

	newBar := bar.BalanceOf(a2u(admin))
	newGns := gns.BalanceOf(a2u(admin))

	// same block no change
	shouldEQ(t, newBar-oldBar, uint64(0))
	shouldEQ(t, newGns-oldGns, uint64(0))
}

func TestCollectRewardSingleBlock(t *testing.T) {
	std.TestSkipHeights(1)

	std.TestSetRealm(adminRealm)

	oldBar := bar.BalanceOf(a2u(admin))
	oldGns := gns.BalanceOf(a2u(admin))

	CollectReward(1, false)

	newBar := bar.BalanceOf(a2u(admin))
	newGns := gns.BalanceOf(a2u(admin))

	shouldEQ(t, newBar-oldBar, uint64(2))        // 2 bar from external incentive
	shouldEQ(t, newGns-oldGns, uint64(10595037)) // 10595035 gns from internal + 2 gns from external
}
