func TestSetSwapFeeNoPermission(t *testing.T) {
	dummy := testutils.TestAddress("dummy")
	std.TestSetOrigCaller(dummy)

	shouldPanicWithMsg(
		t,
		func() {
			SetSwapFee(2)
		},
		"[ROUTER] protocol_fee_swap.gno__SetSwapFee() || only admin(g1lmvrrrr4er2us84h2732sru76c9zl2nvknha8c) or governance(g1cu4dufdlzu0l9pekkqhw6mjnrxkp3z7ykst09d) can set swap fee, called from g1v36k6mteta047h6lta047h6lta047h6lz7gmv8",
	)
}

func TestSetSwapFeeOutOfRange(t *testing.T) {
	std.TestSetOrigCaller(gsa)

	shouldPanicWithMsg(
		t,
		func() {
			SetSwapFee(10001)
		},
		"[ROUTER] protocol_fee_swap.gno__SetSwapFee() || fee(10001) must be in range 0 ~ 10000",
