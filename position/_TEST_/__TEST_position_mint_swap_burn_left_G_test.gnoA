func TestCollectFeePos01(t *testing.T) {
	printPoolBalance()
	// token0: 43308438
	// token1: 6709742

	tokenId, fee0, fee1, poolPath := CollectFee(1)

	shouldEQ(t, tokenId, uint64(1))
	shouldEQ(t, fee0, "8597") // 99% of 8683, rest 1% is protocol fee
