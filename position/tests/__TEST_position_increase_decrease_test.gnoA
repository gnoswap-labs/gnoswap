func TestCollectFeeAfterSwap(t *testing.T) {
	std.TestSetRealm(gsaRealm)

	bar.Approve(a2u(consts.POOL_ADDR), consts.UINT64_MAX)
	foo.Approve(a2u(consts.POOL_ADDR), consts.UINT64_MAX)

	tokenId, fee0, fee1, poolPath := CollectFee(1)
	// event: {GNOSWAP gno.land/r/gnoswap/pool HandleWithdrawalFee [{m_origCaller g1lmvrrrr4er2us84h2732sru76c9zl2nvknha8c} {m_prevRealm gno.land/r/gnoswap/position} {p_tokenId 1} {p_token0Path gno.land/r/onbloc/bar} {p_token1Path gno.land/r/onbloc/foo} {fee0Amount 6} {fee1Amount 0}]}
	// event: {GNOSWAP gno.land/r/gnoswap/position CollectFee [{m_origCaller g1lmvrrrr4er2us84h2732sru76c9zl2nvknha8c} {m_prevRealm } {p_tokenId 1} {fee0 617} {fee1 0} {poolPath gno.land/r/onbloc/bar:gno.land/r/onbloc/foo:500}]}

	shouldEQ(t, tokenId, uint64(1))
	shouldEQ(t, fee0, "611") // this is input token
	shouldEQ(t, fee1, "0")   // this it output token
	shouldEQ(t, poolPath, "gno.land/r/onbloc/bar:gno.land/r/onbloc/foo:500")
}

