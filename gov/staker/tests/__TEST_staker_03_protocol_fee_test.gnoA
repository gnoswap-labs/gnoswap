func TestMockProtocolFee2(t *testing.T) {
	// admin > protocol_fee
	// send qux, bar for testing
	shouldEQ(t, bar.BalanceOf(a2u(consts.PROTOCOL_FEE_ADDR)), uint64(0))
	shouldEQ(t, bar.BalanceOf(a2u(consts.DEV_OPS)), uint64(300))
	shouldEQ(t, bar.BalanceOf(a2u(consts.GOV_STAKER_ADDR)), uint64(117))

	shouldEQ(t, qux.BalanceOf(a2u(consts.PROTOCOL_FEE_ADDR)), uint64(0))
	shouldEQ(t, qux.BalanceOf(a2u(consts.DEV_OPS)), uint64(750))
	shouldEQ(t, qux.BalanceOf(a2u(consts.GOV_STAKER_ADDR)), uint64(292))

	std.TestSetRealm(gsaRealm)
	bar.Transfer(a2u(consts.PROTOCOL_FEE_ADDR), 2500)
	qux.Transfer(a2u(consts.PROTOCOL_FEE_ADDR), 4000)

	shouldEQ(t, bar.BalanceOf(a2u(consts.PROTOCOL_FEE_ADDR)), uint64(2500))
	shouldEQ(t, bar.BalanceOf(a2u(consts.DEV_OPS)), uint64(300))
	shouldEQ(t, bar.BalanceOf(a2u(consts.GOV_STAKER_ADDR)), uint64(117))

	shouldEQ(t, qux.BalanceOf(a2u(consts.PROTOCOL_FEE_ADDR)), uint64(4000))
	shouldEQ(t, qux.BalanceOf(a2u(consts.DEV_OPS)), uint64(750))
	shouldEQ(t, qux.BalanceOf(a2u(consts.GOV_STAKER_ADDR)), uint64(292))

	pf.DistributeProtocolFee()
	std.TestSkipHeights(1)

	shouldEQ(t, bar.BalanceOf(a2u(consts.PROTOCOL_FEE_ADDR)), uint64(0))
	shouldEQ(t, bar.BalanceOf(a2u(consts.DEV_OPS)), uint64(1050))
	shouldEQ(t, bar.BalanceOf(a2u(consts.GOV_STAKER_ADDR)), uint64(1867))

	shouldEQ(t, qux.BalanceOf(a2u(consts.PROTOCOL_FEE_ADDR)), uint64(0))
	shouldEQ(t, qux.BalanceOf(a2u(consts.DEV_OPS)), uint64(1950))
	shouldEQ(t, qux.BalanceOf(a2u(consts.GOV_STAKER_ADDR)), uint64(3092))
}

