# Test gno package operations

# Create a simple package
exec gno test -v .

-- gnomod.toml --
module = "gno.land/p/demo/math"
gno = "0.9"
ignore = true

-- math.gno --
package math

func Add(a, b int) int {
    return a + b
}

func Multiply(a, b int) int {
    return a * b
}

-- math_test.gno --
package math

import "testing"

func TestAdd(t *testing.T) {
    result := Add(2, 3)
    if result != 5 {
        t.Errorf("Add(2, 3) = %d; want 5", result)
    }
}

func TestMultiply(t *testing.T) {
    result := Multiply(3, 4)
    if result != 12 {
        t.Errorf("Multiply(3, 4) = %d; want 12", result)
    }
}
