package gns

import (
	"std"
	"testing"
)

func TestEmissionAmount(t *testing.T) {
	shouldEQ(t, amountToEmission, 900_000_000_000_000)

	sumAmount := uint64(0)
	for _, amountYearly := range halvingYearAmount {
		sumAmount += uint64(amountYearly)
	}
	shouldEQ(t, sumAmount, amountToEmission)
}

func TestGetHalvingTier(t *testing.T) {
	height := std.GetHeight()

	// year 1
	shouldEQ(t, GetHalvingYearByHeight(height+1), 1)
	shouldEQ(t, GetHalvingYearByHeight(height+15768000), 1)

	// year 2
	shouldEQ(t, GetHalvingYearByHeight(height+15768000+1), 2)
	shouldEQ(t, GetHalvingYearByHeight(height+31536000), 2)

	// year 3
	shouldEQ(t, GetHalvingYearByHeight(height+31536000+1), 3)
	shouldEQ(t, GetHalvingYearByHeight(height+47304000), 3)

	// year 4
	shouldEQ(t, GetHalvingYearByHeight(height+47304000+1), 4)
	shouldEQ(t, GetHalvingYearByHeight(height+63072000), 4)

	// year 5
	shouldEQ(t, GetHalvingYearByHeight(height+63072000+1), 5)
	shouldEQ(t, GetHalvingYearByHeight(height+78840000), 5)

	// year 6
	shouldEQ(t, GetHalvingYearByHeight(height+78840000+1), 6)
	shouldEQ(t, GetHalvingYearByHeight(height+94608000), 6)

	// year 7
	shouldEQ(t, GetHalvingYearByHeight(height+94608000+1), 7)
	shouldEQ(t, GetHalvingYearByHeight(height+110376000), 7)

	// year 8
	shouldEQ(t, GetHalvingYearByHeight(height+110376000+1), 8)
	shouldEQ(t, GetHalvingYearByHeight(height+126144000), 8)

	// year 9
	shouldEQ(t, GetHalvingYearByHeight(height+126144000+1), 9)
	shouldEQ(t, GetHalvingYearByHeight(height+141912000), 9)

	// year 10
	shouldEQ(t, GetHalvingYearByHeight(height+141912000+1), 10)
	shouldEQ(t, GetHalvingYearByHeight(height+157680000), 10)

	// year 11
	shouldEQ(t, GetHalvingYearByHeight(height+157680000+1), 11)
	shouldEQ(t, GetHalvingYearByHeight(height+173448000), 11)

	// year 12
	shouldEQ(t, GetHalvingYearByHeight(height+173448000+1), 12)
	shouldEQ(t, GetHalvingYearByHeight(height+189216000), 12)

	// emission end
	shouldEQ(t, GetHalvingYearByHeight(height+189216000+1), 0)
}

func TestGetAmountByHeight(t *testing.T) {
	height1y := int64(15768000)

